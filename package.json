{
	"name": "tws",
	"displayName": "Trailing Whitespace",
	"description": "Highlight and remove trailing whitespaces the right way!",
	"publisher": "jkiviluoto",
	"version": "1.0.0",
	"license": "MIT",
	"engines": {
		"vscode": "^1.45.0"
	},
	"keywords": [
		"whitespace",
		"coding",
		"cleanup"
	],
	"categories": [
		"Other"
	],
	"bugs": {
		"url": "https://github.com/jannek/tws/issues",
		"email": "jkiviluoto@iki.fi"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/jannek/tws.git"
	},
	"homepage": "https://github.com/jannek/tws/blob/master/README.md",
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "tws.trimWhiteSpace",
				"title": "Trim trailing whitespace"
			}
		],
		"configuration": {
			"title": "TWS",
			"properties": {
				"tws.trimOnSave": {
					"type": "boolean",
					"scope": "machine-overridable",
					"default": false,
					"description": "Trim trailing whitespace on save."
				},
				"tws.highlightTrailingWhiteSpace": {
					"type": "boolean",
					"scope": "machine-overridable",
					"default": false,
					"description": "Highlight trailing whitespace."
				},
				"tws.debugLog": {
					"type": "boolean",
					"scope": "machine-overridable",
					"default": false,
					"description": "Is the debug channel activated?"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/diff": "^4.0.2",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"@types/vscode": "^1.45.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"diff": "^4.0.2"
	}
}
